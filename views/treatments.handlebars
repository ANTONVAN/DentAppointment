        <!--FORM-->
        <script src="js/treatment-handler.js"></script>
        <div class=" column level p-3 mr-6">

          <h1 class="is-size-1">Treatments</h1>
          <div id="creator" class="card card-header is-fullwidth">
            <a id="create-btn" class="button is-info m-1">Create</a>
            <div class="create-form">

            </div>
          </div>

          <div id="table">
              <table class="table is-fullwidth">
                <thead>
                  <tr>

                    <th>ID</th>
                    <th>Patient</th>
                    <th>Services</th>
                    <th>Price</th>

                  </tr>

                  <tbody>
                    
                      
                      {{#each Treatments}}
                        
                        {{>treatment-block}}

                       {{/each}}
                       

                    
                </thead>
                
          </div>
      
        </div>

        <!--Modals-->

        <!--Create Modal-->
        <div id="myModal" class="modal card">

          <!-- Modal content -->
          <div class="modal-content">
            <span class="close">&times;</span>
            
            <div class=" column level p-3 mr-6">

              <h1 class="is-size-1">Treatment for Appointment</h1>
    
              <div class="field">
                <label class="label">Treatment Type</label>
                <div class="control">
                  <input id="service_name" class="input" type="text" placeholder="">
                </div>
              </div>

{{!--               <div class="field">
                <label class="label">Price</label>
                <div class="control">
                  <input id="service_cost" class="input" type="text" placeholder="">
                </div>
              </div> --}}
    
              <div class="field">
                <label class="label">Patient Name</label>
                <div class="control">
                  <input id="first_name" class="input" type="text" placeholder="">
                </div>
              </div>
                           
              <div class="field">
                <label class="label">Patient Last Name</label>
                <div class="control">
                  <input id="last_name" class="input" type="text" placeholder="">
                </div>
              </div>
 

              <div class="is-mobil level-right is-narrow">
                <a id="cancelCreate" class="button is-info m-1">Cancel</a>
                <a id="savetreatment" class="button is-info m-1">Save</a>
              </div>
    
            </div>
          </div>
        
        </div>

          <!--Edit Modal-->
          <div id="editModal" class="modal card">

            <!-- Modal content -->
            <div class="modal-content">
              <span class="closeEdit">&times;</span>
              
              <div class=" column level p-3 mr-6">
  
                
              <h1 class="is-size-1">Treatment Edition</h1>
    
              <div class="field">
                <label class="label">Name</label>
                <div class="control">
                  <input id="edit_treatment_name" class="input" type="text" placeholder="">
                </div>
              </div>
    
                 
                 
              <div class="is-mobil level-right is-narrow">
                <a id="cancelEdit" class="button is-info m-1">Cancel</a>
                <a id="saveEdit" class="button is-info m-1">Save</a>
              </div>
    
            </div>
          </div>
          
          </div>

        <!--View Modal-->
        <div id="viewModal" class="modal card">


          <div class="modal-content">
            <span class="closeView">&times;</span>
            
            <div class=" column level p-3 mr-6">

              <h1 id="view_treatment_name" class="is-size-1">Treatment Name</h1>
  
             

              <a id="exitView" class="button is-info m-1">Exit</a>
    
            </div>
          </div>
        
        </div>
        
        <!--Delete Modal-->
        <div id="delete-prompt" class="modal card">

          <!-- Modal content -->
          <div class="modal-content">
            <span class="closeDeletion">&times;</span>

            <div class="">
              <h1>Are you sure you want to delete?</h1>
              <div class="level">
                <a id="cancelDel" class="button is-info m-1">Cancel</a>
                <a id="deleteBtn" class="button is-info m-1">Delete</a>

              </div>
            </div>
            
            
          </div>
        
        </div>

        
